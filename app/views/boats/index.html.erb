<div class="container text-center">
  <h1>Boats</h1>
</div>

<div class="container">
<div data-controller="map" id="map" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" data-map-markers-value="<%= @markers.to_json %>"  style="width: 100%; height: 400px;"></div>
  <div class="row row-cols-1 row-cols-md-3 g-2">
    <% @boats.each do |boat| %>
      <div class="col mb-2">
        <a href="<%= boat_path(boat) %>", class=" text-decoration-none">
          <%= render partial: "shared/boatcard", locals: { boat: boat } %>
        </a>
      </div>
    <% end %>
  </div>
</div>
