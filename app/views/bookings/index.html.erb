<h1 class="text-center mt-4">All Your Bookings</h1>
<div class="container">
  <% @bookings.each do |booking| %>
    <a href="<%= booking_path(booking.id) %>" class="text-decoration-none text-dark">
      <div class="card mt-4">
        <div class="card-header"><h5><%= booking.boat.name %></h5></div>
        <div class="card-body">
          <p><%= booking.content %></p>
          <p><strong>Start Date:</strong> <%= booking.start_date %></p>
          <p><strong>End Date:</strong> <%= booking.end_date %></p>
        </div>
      </div>
    </a>
  <% end %>
</div>
