<div class="my-5">
  <div class="p-5 text-center bg-body-tertiary">
    <div class="container py-5">
      <h1 class="text-body-emphasis">All your bookings</h1>
      <p class="col-lg-8 mx-auto lead">
        <% @bookings.each do |booking| %>
          <div class="text-dark">
            <div class="card mt-4">
              <div class="card-header"><h5>Boat name - <%= booking.boat.name %></h5></div>
              <div class="card-body">
                <p><%= booking.content %></p>
                <p>Check in date -  <%= booking.start_date %></p>
                <p>Check out date - <%= booking.end_date %></p>
                <a href="<%= booking_path(booking.id) %>" class="btn btn-info rounded">Click here for more options</a>
              </div>
            </div>
          </div>
        <% end %>
      </p>
    </div>
  </div>
</div>
