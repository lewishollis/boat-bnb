<h1>Edit Your Booking</h1>

<div class="container">
  <%# /boats/:boat_id/bookings %>
  <%= simple_form_for [@boat, @booking], html: { class: 'form' } do |f| %>
    <div class="form-group">
      <% f.label :content %>
      <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
      <% f.label :start_date %>
      <%= f.input :start_date, as: :date, class: 'form-control' %>
    </div>

    <div class="form-group">
      <% f.label :end_date %>
      <%= f.input :end_date, as: :date, class: 'form-control' %>
    </div>
    <%= f.button :submit, class: 'btn submit-btn' %>
  <% end %>

</div>
